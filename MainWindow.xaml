<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Program" Height="450" Width="800" Background="White" Foreground="White">
    <Grid x:Name="grid1">
        <Label x:Name="label1" Content="Введите текст" HorizontalAlignment="Left" Margin="250,20" />
        <TextBox x:Name="textbox1" Width="300" Height="30" VerticalAlignment="Top" Margin="50"/>
        <Label x:Name="label2" Content="Введите символ или комбинацию" HorizontalAlignment="Left" Margin="250,95" />
        <TextBox x:Name="textbox2" Width="300" Height="30" VerticalAlignment="Top" Margin="120"/>
        <Button x:Name="button1" Content="Выполнить" Width="100" Height="30"  Click="Button_Click" IsDefault="True" />
        
    </Grid>
</Window>
